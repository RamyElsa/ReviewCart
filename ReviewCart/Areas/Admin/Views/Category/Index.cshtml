@model CartDataAccess.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List Of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Category"><i class="fa fa-plus-circle"></i>&nbsp;Create New Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
                <tr>

               <td> @item.Name</td>


               <td>  @item.DisplayOrder</td>
                    
               <td role="group">

                    <a asp-action="CreateUpdate" asp-controller="Category" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
               </td>

                </tr>
        }
    </tbody>
</table>
